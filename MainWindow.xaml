<Window x:Class="finance_tracker_track_cat.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:finance_tracker_track_cat"
        mc:Ignorable="d"
        Title="Track Cat" Height="450" Width="800"
        Background="{StaticResource BackgroundBrush}">
    <Viewbox>
        <Grid Width="772" Height="386">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="125*"/>
                <ColumnDefinition Width="647*"/>
            </Grid.ColumnDefinitions>

            <!-- title -->
            <TextBlock x:Name="MainTitle" HorizontalAlignment="Left" Margin="174,10,0,0" TextWrapping="Wrap" Text="Track Cat" VerticalAlignment="Top" FontSize="36" FontFamily="Share Tech Mono" Grid.Column="1"/>
            <TextBlock x:Name="TransactionTitle" HorizontalAlignment="Left" Margin="40,84,0,0" TextWrapping="Wrap" Text="All Transactions" VerticalAlignment="Top" FontFamily="Share Tech Mono" Grid.ColumnSpan="2"/>
            <TextBlock x:Name="TotalIncomeTitle" HorizontalAlignment="Left" Margin="254,99,0,0" TextWrapping="Wrap" Text="Total Income" VerticalAlignment="Top" FontFamily="Share Tech Mono" Grid.Column="1"/>
            <TextBlock x:Name="TotalExpenseTitle" HorizontalAlignment="Left" Margin="254,144,0,0" TextWrapping="Wrap" Text="Total Expense" VerticalAlignment="Top" FontFamily="Share Tech Mono" Grid.Column="1"/>
            <TextBlock x:Name="TotalTotalTitle" HorizontalAlignment="Left" Margin="254,189,0,0" TextWrapping="Wrap" Text="Final Amount" VerticalAlignment="Top" FontFamily="Share Tech Mono" Grid.Column="1"/>
            <TextBlock x:Name="BillsTitle" HorizontalAlignment="Left" Margin="386,84,0,0" TextWrapping="Wrap" Text="Bills" VerticalAlignment="Top" FontFamily="Share Tech Mono" Width="38" Grid.Column="1"/>
            <TextBlock x:Name="GoalsTitle" HorizontalAlignment="Left" Margin="506,84,0,0" TextWrapping="Wrap" Text="Goals" VerticalAlignment="Top" FontFamily="Share Tech Mono" Width="38" Grid.Column="1"/>

            <!-- boxes -->
            <ListBox x:Name="AllTransactionsBox" HorizontalAlignment="Left" Height="150" Margin="40,99,0,0" VerticalAlignment="Top" Width="334" FontFamily="Share Tech Mono" SelectionChanged="AllTransactionsBox_SelectionChanged" ItemTemplate="{StaticResource EmojiListBoxItemTemplate}" KeyDown="DeleteTransaction_KeyDown" MouseDoubleClick="EditTransaction_MouseDoubleClick" Grid.ColumnSpan="2">
                <ListBox.ItemContainerStyle>
                    <Style TargetType="ListBoxItem">
                        <Setter Property="ToolTip" Value="{Binding Content, RelativeSource={RelativeSource Self}}"/>
                    </Style>
                </ListBox.ItemContainerStyle>
            </ListBox>

            <ListBox x:Name="TotalIncomeBox" HorizontalAlignment="Left" Height="20" Margin="254,114,0,0" VerticalAlignment="Top" Width="118" FontFamily="Share Tech Mono" Grid.Column="1" />
            <ListBox x:Name="TotalExpenseBox" HorizontalAlignment="Left" Height="20" Margin="254,159,0,0" VerticalAlignment="Top" Width="118" FontFamily="Share Tech Mono" Grid.Column="1"/>
            <ListBox x:Name="TotalTotalBox" HorizontalAlignment="Left" Height="20" Margin="254,204,0,0" VerticalAlignment="Top" Width="118" FontFamily="Share Tech Mono" Grid.Column="1"/>

            <ListBox x:Name="BillsBox" HorizontalAlignment="Left" Height="150" Margin="386,99,0,0" VerticalAlignment="Top" Width="104" FontFamily="Share Tech Mono" Grid.Column="1"/>
            <ListBox x:Name="GoalsBox" HorizontalAlignment="Left" Height="150" Margin="506,99,0,0" VerticalAlignment="Top" Width="103" FontFamily="Share Tech Mono" Grid.Column="1"/>

            <!-- amount box -->
            <TextBox x:Name="DescriptionTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="200" Text="Add Description" GotFocus="TextBoxGotFocus" LostFocus="TextBoxLostFocus" Margin="40,258,0,0" FontFamily="Share Tech Mono" KeyDown="DescriptionTextBox_KeyDown" Grid.ColumnSpan="2"/>
            <TextBox x:Name="AmountTextBox" HorizontalAlignment="Left" Margin="40,280,0,0" VerticalAlignment="Top" Width="121" Text="Enter Amount" TextChanged="IncomeTextBoxTextChanged" GotFocus="TextBoxGotFocus" LostFocus="TextBoxLostFocus" FontFamily="Share Tech Mono" KeyDown="AmountTextBox_KeyDown" PreviewTextInput="AmountTextBox_PreviewTextInput" Grid.ColumnSpan="2"/>
            <!-- add transaction button -->
            <Button x:Name="AddTransactionBtn" 
                Content="Add" 
                HorizontalAlignment="Left" 
                Margin="41,279,0,0" 
                VerticalAlignment="Top" 
                Width="74"
                Click="AddIncomeClick" 
                FontFamily="Share Tech Mono" 
                Height="17" Grid.Column="1"/>
            <!-- delete transaction button -->
            <Button Content="Delete" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="74" 
                Margin="41,319,0,0"
                Click="DeleteTransactionButton_Click"
                FontFamily="Share Tech Mono" Height="17" Grid.Column="1"/>
            <!-- edit transaction button -->
            <Button Content="Edit" 
                HorizontalAlignment="Left" 
                VerticalAlignment="Top" 
                Width="74" 
                Margin="41,299,0,0"
                Click="EditTransactionButton_Click"
                FontFamily="Share Tech Mono" Height="17" Grid.Column="1"/>

            <!-- currency dropdown -->
            <ComboBox x:Name="CurrencyComboBox" HorizontalAlignment="Left" Margin="527,326,0,0" VerticalAlignment="Top" Width="66" SelectionChanged="CurrencyComboBox_SelectionChanged" FontFamily="Share Tech Mono" Grid.Column="1">
                <ComboBoxItem Content="Euro" IsSelected="True"/>
                <ComboBoxItem Content="Dollar"/>
            </ComboBox>
			
            <TextBlock x:Name="ChangeCurrencyTitle" HorizontalAlignment="Left" Margin="511,310,0,0" TextWrapping="Wrap" Text="Change Currency" VerticalAlignment="Top" FontFamily="Share Tech Mono" Width="98" Grid.Column="1"/>

            <!-- tag input box -->
            <TextBox x:Name="TagTextBox" HorizontalAlignment="Left" VerticalAlignment="Top" Width="118" Text="Add Tag" GotFocus="TextBoxGotFocus" LostFocus="TextBoxLostFocus" Margin="40,347,0,0" FontFamily="Share Tech Mono" KeyDown="TagTextBox_KeyDown" Grid.ColumnSpan="2"/>
            <!-- add tag button -->
            <Button x:Name="AddTagBtn" Content="Add Tag" HorizontalAlignment="Left" Margin="41,346,0,0" VerticalAlignment="Top" Width="74" Click="AddTagClick" FontFamily="Share Tech Mono" Height="17" Grid.Column="1"/>






            <!-- cat meow-->
            <TextBlock x:Name="AsciiCatLogoTitle" HorizontalAlignment="Left" VerticalAlignment="Top" Margin="248,4,0,0" FontFamily="Courier New" FontSize="14" Foreground="{StaticResource ForegroundBrush}" TextWrapping="Wrap" Height="33" Grid.Column="1">
                ≽^•⩊•^≼
            </TextBlock>
            <TextBlock x:Name="AsciiCatLogoBills" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,86,157,0" FontFamily="Courier New" FontSize="8" Foreground="{StaticResource ForegroundBrush}" TextWrapping="Wrap" Height="9" Width="52" Grid.Column="1">
                /ᐠ - ˕ -マ Ⳋ
            </TextBlock>
            <TextBlock x:Name="AsciiCatLogoGoals" HorizontalAlignment="Right" VerticalAlignment="Top" Margin="0,86,37,0" FontFamily="Courier New" FontSize="7" Foreground="{StaticResource ForegroundBrush}" TextWrapping="Wrap" Height="9" Width="59" Grid.Column="1">
                ദ്ദി(˵ • ᴗ - ˵ )
            </TextBlock>



        </Grid>
    </Viewbox>
</Window>
